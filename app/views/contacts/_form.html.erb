
<div class="container-contact100">
  <div class="wrap-contact100">

      <%= form_for(@contact ,:html => {:class => "contact100-form"})  do |f| %>

        <% if @contact.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

            <ul>
              <% @contact.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>


        <span class="contact100-form-title">
					Send Us A Message
				</span>

        <%= f.label :first_name ,:class=>"label-input100"%><br>
        <div class="wrap-input100 rs1-wrap-input100 validate-input" data-validate="Type first name">
          <%= f.text_field :first_name,:id=>"first-name",:class=>"input100",:placeholder=>"write your first name here" %>
          <span class="focus-input100"></span>
        </div>
        <div class="wrap-input100 rs2-wrap-input100 validate-input" data-validate="Type first name">
          <%= f.text_field :last_name,:class=>"input100",:placeholder=>"write your last name here" %>
          <span class="focus-input100"></span>
        </div>

        <%= f.label :email ,:class=>"label-input100"%><br>
        <div class="wrap-input100  validate-input" data-validate="Type first name">
          <%= f.text_field :email,:id=>"email",:class=>"input100",:placeholder=>"write your email here" %>
          <span class="focus-input100"></span>
        </div>

        <%= f.label :phone_number ,:class=>"label-input100"%><br>
        <div class="wrap-input100  validate-input" data-validate="Type first name">
          <%= f.text_field :phone_number,:id=>"phone",:class=>"input100",:placeholder=>"write your phone here" %>
          <span class="focus-input100"></span>
        </div>

        <%= f.label :context ,:class=>"label-input100"%><br>
        <div class="wrap-input100  validate-input" data-validate="Type first name">
          <%= f.text_field :context,:id=>"message",:class=>"input100",:placeholder=>"write your message here" %>
          <span class="focus-input100"></span>
        </div>

        <div class="actions container-contact100-form-btn">
          <%=  f.submit :class=>"contact100-form-btn"%>
        </div>







      <% end %>
      <div class="contact100-more flex-col-c-m" style="background-image:<%=image_tag('hand-made-1-1200x600.jpg')   %> ">

        <div class="flex-w size1 p-b-47">
          <div class="txt1 p-r-25">
            <span class="lnr lnr-map-marker"></span>
          </div>

          <div class="flex-col size2">
						<span class="txt1 p-b-20">
							Address
						</span>

            <span class="txt2">
							Mada Center 8th floor, 379 Hudson St, Cairo, Egypt 10018 EG
						</span>
          </div>
        </div>

        <div class="dis-flex size1 p-b-47">
          <div class="txt1 p-r-25">
            <span class="lnr lnr-phone-handset"></span>
          </div>

          <div class="flex-col size2">
						<span class="txt1 p-b-20">
							Lets Talk
						</span>

            <span class="txt3">
							+20 1000 872272
						</span>
          </div>
        </div>

        <div class="dis-flex size1 p-b-47">
          <div class="txt1 p-r-25">
            <span class="lnr lnr-envelope"></span>
          </div>

          <div class="flex-col size2">
						<span class="txt1 p-b-20">
							General Support
						</span>

            <span class="txt3">
							support@yadawy.com
						</span>
          </div>
        </div>
      </div>
      </div>
</div>
</div>