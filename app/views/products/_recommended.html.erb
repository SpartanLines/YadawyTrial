<div class="card-deck">

  <% @similar_p.each do |product| %>


    <div class="card">
      <div class="">
        <% if product.image? %>
          <%= image_tag product.image.url(:productimage),class: "card-img-top",size:"204x204" %>
        <% else %>
          <%= image_tag 'No_Image_Available.jpg',class: "card-img-top",size:"204x204" %>
        <%end %>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <%= sanitize(product.specs) %>
          <div class="price card-text">
            <h3><%= number_to_currency(product.price) %></h3>

          </div>
        </div>

        <div class="card-footer">
          <span><%= button_to 'Add to Cart', line_items_path(product_id: product),class:"btn btn-primary" ,style:"width:auto;float:left;margin: 0 30px 0 30px"%></span>
          <span>  <%= button_to 'show',  product , class:"btn btn-info",:method => :get,style:"width:auto;"%></span>
        </div>
      </div>
    </div>

  <% end %>

</div>